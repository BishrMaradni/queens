{
  "experiment_name" : "smc_park_hf",
  "database"  :{
    "address"   : "localhost:27017"
  },
  "method": {
    "method_name": "smc",
    "method_options" : {
      "seed" : 41,
      "num_particles" : 200,
      "model" : "model",
      "temper_type" : "bayes",
      "plot_trace_every" : 0,
      "result_description" : {
          "write_results" : true,
          "plot_results" : true,
          "cov" : true
      }
    }
  },
  "model" : {
    "type" : "likelihood_model",
    "subtype": "gaussian_static",
    "forward_model": "forward_model",
    "output_label": "y_obs",
    "coordinate_labels": ["x3","x4"],
    "likelihood_noise_type": "jeffreys_prior",
    "fixed_likelihood_noise_value": 1E-3,
    "nugget_noise_var": 1E-8,
    "noise_upper_bound": 2.0,
    "experimental_csv_data_base_dirs": ["{experimental_data_path}"],
    "parameters" : "parameters"
  },
  "forward_model":{
    "type": "simulation_model",
    "interface" : "interface",
    "parameters" : "parameters"
  },
  "MCMC_Kernel": {
    "method_name": "metropolis-hastings",
    "method_options" : {
      "as_mcmc_kernel" : true,
      "num_chains" : 15,
      "num_samples" : 30,
      "proposal_distribution" : "normal_proposal"
    }
  },
  "normal_proposal" : {
    "type" : "normal",
    "mean" : [0.0, 0.0],
    "cov" : [[0.001, 0.00],
             [0.00, 0.001]]
  },
  "interface" : {
    "type" : "direct_python_interface",
    "num_workers" : 4,
    "main_file" : "park91a_hifi_coords.py"
  },
  "parameters" : {
    "random_variables" : {
      "x1" : {
        "type" : "FLOAT",
        "size" : 1,
        "distribution" : "normal",
        "distribution_parameter" : [0.6,0.2]
      },
      "x2" : {
        "type" : "FLOAT",
        "size" : 1,
        "distribution" : "normal",
        "distribution_parameter" : [0.3,0.1]
      }
    }
  }
}
