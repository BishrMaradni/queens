{
  "experiment_name": "hf_scatra_baci",
  "database": {
    "type": "mongodb",
    "address": "localhost:27017"
  },
  "method": {
    "method_name": "smc",
    "method_options": {
      "seed": 41,
      "num_particles": 20,
      "model": "model",
      "temper_type": "bayes",
      "plot_trace_every": 0,
      "result_description": {
        "write_results": true,
        "plot_results": false,
        "cov": true
      }
    }
  },
  "model": {
    "type": "likelihood_model",
    "subtype": "gaussian_static",
    "forward_model": "forward_model",
    "output_label": "phi",
    "coordinate_labels": [
      "x",
      "y",
      "z"
    ],
    "time_label": "t",
    "likelihood_noise_type": "jeffreys_prior",
    "fixed_likelihood_noise_value": 1E-6,
    "nugget_noise_var": 1E-15,
    "noise_upper_bound": 2.0,
    "data_processor": {
    "type": "csv",
    "file_name_identifier": "*.csv",
    "file_options_dict": {
        "header_row": 0,
        "index_column": false,
        "returned_filter_format": "dict",
        "filter": {
            "type": "entire_file"
        }
        }
    },
    "experimental_csv_data_base_dir": "{experimental_data_path}",
    "parameters": "parameters"
  },
  "MCMC_Kernel": {
    "method_name": "metropolis-hastings",
    "method_options": {
      "as_mcmc_kernel": true,
      "num_chains": 20,
      "num_samples": 3,
      "proposal_distribution": "proposal_distribution"
    }
  },
  "forward_model": {
    "type": "simulation_model",
    "interface": "interface",
    "parameters": "parameters"
  },
  "proposal_distribution": {
    "distribution": "normal",
    "mean": [
      0.0,
      0.0
    ],
    "covariance": [
      [
        0.001,
        0.00
      ],
      [
        0.00,
        0.001
      ]
    ]
  },
  "interface": {
    "type": "job_interface",
    "resources": "resources",
    "driver": "driver"
  },
  "resources": {
    "local_machine": {
      "scheduler": "local_scheduler",
      "max-concurrent": 1,
      "max-finished-jobs": 10000
    }
  },
  "local_scheduler": {
    "experiment_dir": "{experiment_dir}",
    "scheduler_type": "standard",
    "singularity": false,
    "restart": false,
    "num_procs": 1,
    "num_procs_post": 1
  },
  "driver": {
    "driver_type": "baci",
    "driver_params": {
      "input_template": "{baci_hf_input}",
      "path_to_executable": "{baci-release}",
      "path_to_postprocessor": "{post_drt_ensight}",
      "post_file_name_prefix_lst": [
        "scatra"
      ],
      "post_process_options": [
        ""
      ],
      "data_processor": "data_processor_baci"
    }
  },
  "data_processor_baci": {
    "type": "ensight",
    "file_name_identifier": "scatra",
    "file_options_dict": {
      "delete_field_data": false,
      "geometric_target": [
        "experimental_data"
      ],
      "physical_field_dict": {
        "vtk_field_type": "scatra",
        "vtk_array_type": "point_array",
        "vtk_field_label": "phi_1",
        "field_components": [
          0
        ]
      },
      "target_time_lst": [
        "from_experimental_data"
      ],
      "time_tol": 0.001
    }
  },
  "parameters": {
    "random_variables": {
      "x_s": {
        "size": 1,
        "distribution": "uniform",
        "lower_bound": 0.0,
        "upper_bound": 1.0
      },
      "y_s": {
        "size": 1,
        "distribution": "uniform",
        "lower_bound": 0.0,
        "upper_bound": 1.0
      }
    }
  }
}
