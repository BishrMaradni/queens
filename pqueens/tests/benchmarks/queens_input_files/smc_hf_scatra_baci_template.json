{
  "experiment_name" : "hf_scatra_baci",
  "database"  :{
    "address"   : "localhost:27017"
  },
  "method": {
    "method_name": "smc",
    "method_options" : {
      "seed" : 41,
      "num_particles" : 20,
      "model" : "model",
      "temper_type" : "bayes",
      "plot_trace_every" : 0,
      "result_description" : {
          "write_results" : true,
          "plot_results" : false,
          "cov" : true
      }
    }
  },
  "model" : {
    "type" : "likelihood_model",
    "subtype": "gaussian_static",
    "forward_model": "forward_model",
    "output_label": "phi",
    "coordinate_labels": ["x", "y", "z"],
    "time_label": "t",
    "likelihood_noise_type": "jeffreys_prior",
    "fixed_likelihood_noise_value": 1E-6,
    "nugget_noise_var": 1E-15,
    "noise_upper_bound": 2.0,
    "experimental_csv_data_base_dirs": ["{experimental_data_path}"],
    "parameters" : "parameters"
  },
  "MCMC_Kernel": {
    "method_name": "metropolis-hastings",
    "method_options" : {
      "as_mcmc_kernel" : true,
      "num_chains" : 20,
      "num_samples" : 3,
      "proposal_distribution" : "normal_proposal"
    }
  },
  "forward_model" : {
    "type" : "simulation_model",
    "interface" : "interface",
    "parameters" : "parameters"
  },
  "normal_proposal" : {
    "type" : "normal",
    "mean" : [0.0, 0.0],
    "cov" : [[0.001, 0.00],
             [0.00, 0.001]]
  },
  "interface" : {
    "type" : "job_interface",
    "resources": "resources",
    "driver": "driver"
  },
  "resources": {
        "local_machine": {
            "scheduler": "local_scheduler",
            "max-concurrent": 1,
            "max-finished-jobs": 10000
        }
    },
  "local_scheduler": {
        "experiment_dir": "{experiment_dir}",
        "scheduler_type": "standard",
        "singularity": false,
        "restart": false,
        "num_procs": 1,
        "num_procs_post": 1
    },
  "driver": {
        "driver_type": "baci",
        "driver_params": {
            "input_template": "{baci_hf_input}",
            "path_to_executable": "{baci-release}",
            "path_to_postprocessor": "{post_drt_ensight}",
            "post_file_name_prefix_lst": ["scatra"],
            "post_process_options": [""],
            "post_post": {
                "post_post_approach_sel": "baci_ensight",
                "post_post_file_name_prefix_lst": ["scatra"],
                "field_specification": {
                  "geometric_target": [["experimental_data"]],
                  "physical_field_dict": {
                    "vtk_field_type": ["scatra"],
                    "vtk_array_type": ["point_array"],
                    "vtk_field_label": ["phi_1"],
                    "field_components": [[0]]
                  },
                  "target_time": [["from_experimental_data"]],
                  "time_tol": [0.001]
                },
                "delete_field_data": false
            }
        }
    },
  "parameters" : {
    "random_variables" : {
      "x_s" : {
        "type" : "FLOAT",
        "size" : 1,
        "distribution" : "uniform",
        "distribution_parameter" : [0.0, 1.0]
      },
      "y_s" : {
        "type" : "FLOAT",
        "size" : 1,
        "distribution" : "uniform",
        "distribution_parameter" : [0.0, 1.0]
      }
    }
  }
}
