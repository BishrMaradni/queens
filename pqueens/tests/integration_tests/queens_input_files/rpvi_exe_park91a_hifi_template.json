{
  "experiment_name": "inverse_rpvi_park91a_hifi",
  "database": {
    "type": "mongodb",
    "address": "localhost:27017"
  },
  "method": {
    "method_name": "rpvi",
    "method_options": {
      "model": "model",
      "max_feval": 10,
      "likelihood_gradient_method": "{gradient_method}",
      "finite_difference_method": "2-point",
      "n_samples_per_iter": 3,
      "score_function_bool": true,
      "variational_distribution": {
        "variational_approximation_type": "fullrank",
        "variational_family": "normal"
      },
      "optimization_options": {
        "stochastic_optimizer": "Adam",
        "optimization_type": "max",
        "learning_rate": 0.02,
        "gradient_clipping": true,
        "gradient_clipping_norm_threshold": 1e6,
        "natural_gradient": true,
        "FIM_dampening": true,
        "decay_start_iteration": 50,
        "dampening_coefficient": 1e-2,
        "FIM_dampening_lower_bound": 1e-8,
        "rel_L1_change_threshold": -1,
        "rel_L2_change_threshold": -1,
        "max_iter": 10000000
      },
      "variational_transformation": null,
      "variational_parameter_initialization": "prior",
      "random_seed": 1,
      "result_description": {
        "write_results": true,
        "export_iteration_data": true,
        "plotting_options": {
          "plot_boolean": false,
          "plotting_dir": "{plot_dir}",
          "plot_name": "variational_params_convergence.eps",
          "save_bool": false
        }
      }
    }
  },
  "model": {
    "type": "likelihood_model",
    "subtype": "gaussian",
    "forward_model": "forward_model",
    "output_label": "y_obs",
    "coordinate_labels": [
      "x3",
      "x4"
    ],
    "noise_type": "MAP_jeffrey_variance",
    "nugget_noise_variance": 1E-8,
    "experimental_file_name_identifier": "experimental_data.csv",
    "experimental_csv_data_base_dir": "{experimental_data_path}",
    "parameters": "parameters"
  },
  "forward_model": {
    "type": "simulation_model",
    "interface": "interface",
    "parameters": "parameters"
  },
  "interface": {
    "type": "job_interface",
        "resources": "resources",
        "driver": "driver"
  },
    "driver": {
        "driver_type": "baci",
        "driver_params": {
            "input_template": "{input_file}",
            "path_to_executable": "{executable}",
            "path_to_postprocessor": "",
            "post_file_name_prefix_lst": [],
            "post_process_options": [],
            "data_processor": "data_processor_output",
            "gradient_data_processor": "gradient_data_processor"
        }
    },
    "data_processor_output": {
        "type": "csv",
        "file_name_identifier": "*_output.csv",
        "file_options_dict": {
            "delete_field_data": false,
            "filter": {
                "type": "entire_file"
            }
        }
    },
  "gradient_data_processor":{
    "type": "csv",
    "file_name_identifier": "*_gradient.csv",
    "file_options_dict": {
        "delete_field_data": false,
        "filter": {
            "type": "entire_file"
        }
    }
  },
    "resources": {
        "local_machine": {
            "scheduler": "local_scheduler",
            "max-concurrent": 1,
            "max-finished-jobs": 1000
        }
    },
    "local_scheduler": {
        "experiment_dir": "{experiment_dir}",
        "scheduler_type": "standard",
        "singularity": false,
        "num_procs": 1,
        "num_procs_post": 1
    },

  "parameters": {
    "random_variables": {
      "x1": {
        "distribution": "normal",
        "mean": 0.6,
        "covariance": 0.2,
        "dimension": 1
      },
      "x2": {
        "distribution": "normal",
        "mean": 0.3,
        "covariance": 0.1,
        "dimension": 1
      }
    }
  }
}
