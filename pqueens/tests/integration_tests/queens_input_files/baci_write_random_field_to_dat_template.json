{
  "experiment_name": "baci_write_random_field_to_dat",
  "restart": false,
  "database": {
    "type": "mongodb",
    "address": "localhost:27017"
  },
  "method": {
    "method_name": "monte_carlo",
    "method_options": {
      "seed": 1,
      "num_samples": 3,
      "model": "model",
      "result_description": {
        "write_results": true,
        "plot_results": false
      }
    }
  },
  "external_geometry": {
    "type": "baci_dat",
    "list_geometric_sets": [
      "DSURFACE 4"
    ],
    "queens_tmp_dir": "{experiment_dir}"
  },
  "model": {
    "type": "simulation_model",
    "interface": "interface",
    "parameters": "parameters"
  },
  "interface": {
    "type": "job_interface",
    "resources": "resources",
    "driver": "driver"
  },
  "driver": {
    "driver_type": "baci",
    "driver_params": {
      "input_template": "{baci_input}",
      "path_to_executable": "{baci-release}",
      "path_to_postprocessor": "{post_drt_monitor}",
      "post_process_options": [
        "--field=structure --node=26 --start=1"
      ],
      "post_file_name_prefix_lst": [
        "QoI"
      ],
      "data_processor": "data_processor"
    }
  },
  "data_processor": {
    "type": "csv",
    "file_name_identifier": "QoI*",
    "file_options_dict": {
      "delete_field_data": false,
      "use_cols_lst": [
        1,
        3
      ],
      "index_column": 0,
      "skip_rows": 4,
      "filter": {
        "type": "by_target_values",
        "target_values": [5e-1],
        "tolerance": 1e-2
      }
    }
  },
  "resources": {
    "local_machine": {
      "scheduler": "local_scheduler",
      "max-concurrent": 1,
      "max-finished-jobs": 10001
    }
  },
  "local_scheduler": {
    "scheduler_type": "standard",
    "experiment_dir": "{experiment_dir}",
    "num_procs": 1,
    "num_procs_post": 1
  },
  "parameters": {
    "random_variables": {
      "emodul": {
        "size": 1,
        "distribution": "lognormal",
        "normal_mean": 6.392,
        "normal_covariance": 0.0705
      },
      "nue": {
        "size": 1,
        "distribution": "uniform",
        "lower_bound": 0.45,
        "upper_bound": 0.49
      },
      "pressure": {
        "size": 1,
        "distribution": "uniform",
        "lower_bound": 28000,
        "upper_bound": 38000
      }
    },
    "random_fields": {
      "random_inflow": {
        "type": "FLOAT",
        "external_definition": {
          "type": "dirichlet",
          "external_instance": "DSURFACE 4",
          "dof_for_field": 3,
          "funct_for_field": 0,
          "dofs_deterministic": [
            1,
            2
          ],
          "value_dofs_deterministic": [
            0,
            0
          ],
          "funct_for_deterministic_dofs": [
            0,
            0
          ]
        },
        "dimension": 1,
        "corrstruct": "generic_external_random_field",
        "corr_length": 1.0,
        "std_hyperparam_rf": 0.001,
        "mean_fun_type": "constant",
        "mean_fun_params": [
          0
        ]
      }
    }
  }
}
