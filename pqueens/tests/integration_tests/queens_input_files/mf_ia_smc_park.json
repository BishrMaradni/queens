{
  "experiment_name" : "smc_park_mf",
  "database"  :{
    "address"   : "localhost:27017"
  },
  "method": {
    "method_name": "smc",
    "method_options" : {
      "seed" : 41,
      "num_particles" : 8,
      "model" : "model",
      "temper_type" : "bayes",
      "plot_trace_every" : 0,
      "result_description" : {
          "write_results" : true,
          "plot_results" : false,
          "cov" : true
      }
    }
  },
  "model" : {
    "type" : "likelihood_model",
    "subtype": "bmf_gaussian_static",
    "mf_approx_settings": {
          "type": "gp_approximation_gpy",
          "features_config": "no_features",
          "X_cols": [0,1],
          "num_features": 0,
          "mf_subiterator": "bmfia_iterator"
        },
    "forward_model": "lf_model",
    "output_label": "y_obs",
    "coordinate_labels": ["x3","x4"],
    "likelihood_noise_type": "fixed",
    "fixed_likelihood_noise_value": 1E-3,
    "nugget_noise_var": 1E-12,
    "noise_upper_bound": 2.0,
    "experimental_csv_data_base_dirs": ["{experimental_data_path}"],
    "parameters" : "parameters"
  },
  "MCMC_Kernel": {
    "method_name": "metropolis-hastings",
    "method_options" : {
      "as_mcmc_kernel" : true,
      "num_chains" : 2,
      "num_samples" : 5,
      "proposal_distribution" : "normal_proposal"
    }
  },
  "bmfia_iterator": {
    "method_name": "bmfia",
    "low_fidelity_model": "lf_model",
    "high_fidelity_model": "hf_model",
    "initial_design": {
      "type": "random",
      "num_HF_eval": 10,
      "seed": 1
    }
  },
  "lf_model" : {
    "type" : "simulation_model",
    "interface" : "lf_interface",
    "parameters" : "parameters"
  },
  "hf_model" : {
    "type" : "simulation_model",
    "interface" : "hf_interface",
    "parameters" : "parameters"
  },
  "normal_proposal" : {
    "type" : "normal",
    "mean" : [0.0, 0.0],
    "cov" : [[0.001, 0.00],
             [0.00, 0.001]]
  },
  "lf_interface" : {
    "type" : "direct_python_interface",
    "num_workers" : 1,
    "main_file" : "park91a_lofi_coords.py"
  },
  "hf_interface" : {
    "type" : "direct_python_interface",
    "num_workers" : 1,
    "main_file" : "park91a_hifi_coords.py"
  },
  "parameters" : {
    "random_variables" : {
      "x1" : {
        "type" : "FLOAT",
        "size" : 1,
        "distribution" : "normal",
        "distribution_parameter" : [0.6,0.2]
      },
      "x2" : {
        "type" : "FLOAT",
        "size" : 1,
        "distribution" : "normal",
        "distribution_parameter" : [0.3,0.1]
      }
    }
  }
}
