{
  "experiment_name": "baci_mc_randomfields_from_geometry",
  "database": {
    "type": "mongodb",
    "address": "localhost:27017"
  },
  "method": {
    "method_name": "monte_carlo",
    "method_options": {
      "seed": 1,
      "num_samples": 10000,
      "model": "model",
      "result_description": {
        "write_results": true,
        "plot_results": false
      }
    }
  },
  "external_geometry": {
    "type": "baci_dat",
    "list_geometric_sets": [
      "DSURFACE 9"
    ],
    "queens_tmp_dir": "{experiment_dir}"
  },
  "model": {
    "type": "simulation_model",
    "interface": "interface",
    "parameters": "parameters"
  },
  "interface": {
    "type": "job_interface",
    "resources": "resources",
    "driver": "driver"
  },
  "driver": {
    "driver_type": "baci",
    "driver_params": {
      "input_template": "{baci_input}",
      "path_to_executable": "{baci-release}",
      "path_to_postprocessor": "{post_drt_monitor}",
      "post_process_options": [
        "--field=structure --node=220 --start=1",
        "--field=structure --node=219 --start=1",
        "--field=structure --node=344 --start=1"
      ],
      "post_post": {
        "post_post_approach_sel": "csv",
        "post_file_name_identifier": "QoI",
        "file_options_dict": {
          "delete_field_data": false,
          "filter_range": [5e-1, 5e-1],
          "filter_tol": 1e-2,
          "use_cols_lst": [
            1,
            3
          ],
          "filter_column": 0,
          "skip_rows": 4
        }
      }
    }
  },
  "resources": {
    "local_machine": {
      "scheduler": "local_scheduler",
      "max-concurrent": 1,
      "max-finished-jobs": 10001
    }
  },
  "local_scheduler": {
    "experiment_dir": "{experiment_dir}",
    "scheduler_type": "standard",
    "num_procs": 4,
    "num_procs_post": 1
  },
  "parameters": {
    "random_variables": {
      "emodul": {
        "size": 1,
        "distribution": "lognormal",
        "normal_mean": 6.392,
        "normal_covariance": 0.0705
      }
    },
    "random_fields": {
      "random_inflow": {
        "type": "FLOAT",
        "external_definition": {
          "type": "dirichlet",
          "external_instance": "DSURFACE 9"
        },
        "dimension": 2,
        "corrstruct": "generic_external_random_field",
        "corr_length": 0.08,
        "std_hyperparam_rf": 0.1,
        "mean_fun": "inflow_parabola",
        "mean_fun_params": [
          1.5
        ],
        "num_points": 200
      }
    }
  }
}
