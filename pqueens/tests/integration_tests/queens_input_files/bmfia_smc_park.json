{
  "experiment_name": "smc_park_mf",
  "database": {
    "type": "mongodb",
    "address": "localhost:27017"
  },
  "method": {
    "method_name": "smc",
    "method_options": {
      "seed": 41,
      "num_particles": 50,
      "model": "model",
      "temper_type": "bayes",
      "plot_trace_every": 0,
      "result_description": {
        "write_results": true,
        "plot_results": false,
        "cov": true
      }
    }
  },
  "model": {
    "type": "likelihood_model",
    "subtype": "bmf_gaussian",
    "mf_approx_settings": {
      "type": "gp_precompiled",
      "num_processors_multi_processing": 4,
      "stochastic_optimizer": "Adam",
      "learning_rate": 0.008,
      "optimization_type": "max",
      "max_iterations": 1000,
      "plot_refresh_rate": 10,
      "rel_L1_change_threshold": 3E-3,
      "rel_L2_change_threshold": 3E-3,
      "noise_var_lb": 1E-6,
      "data_scaling": {
        "type": "standard_scaler"
      },
      "sigma_0_sq": 0.05,
      "l_scale_sq": 1.0,
      "sigma_n_sq": 0.05,
      "hyper_prior_lengthscale": {
        "hyper_prior_bool": false,
        "fraction_standard_deviation": 0.15,
        "fraction_mean_value": 0.25
      },
      "prior_mean_function_type": "lf-identity",
      "random_seed": 1,
      "features_config": "man_features",
      "X_cols": [
        0
      ],
      "num_features": 1,
      "mf_subiterator": "bmfia_iterator"
    },
    "forward_model": "lf_model",
    "output_label": "y_obs",
    "coordinate_labels": [
      "x3",
      "x4"
    ],
    "likelihood_noise_type": "jeffreys_prior",
    "noise_value": 0.01,
    "nugget_noise_var": 1E-8,
    "experimental_file_name_identifier": "*.csv",
    "experimental_csv_data_base_dir": "{experimental_data_path}",
    "parameters": "parameters",
    "plotting_options": {
      "plotting_dir": "{plot_dir}",
      "plot_names": [
        "bmfia_plot.png", "posterior.png"
      ],
      "save_bool": [
        false, false
      ],
      "plot_booleans": [
        false, false
      ]
    }
  },
  "MCMC_Kernel": {
    "method_name": "metropolis-hastings",
    "method_options": {
      "as_mcmc_kernel": true,
      "num_chains": 50,
      "num_samples": 2,
      "proposal_distribution": "proposal_distribution"
    }
  },
  "bmfia_iterator": {
    "method_name": "bmfia",
    "low_fidelity_model": "lf_model",
    "high_fidelity_model": "hf_model",
    "initial_design": {
      "type": "random",
      "num_HF_eval": 20,
      "seed": 1
    }
  },
  "lf_model": {
    "type": "simulation_model",
    "interface": "lf_interface",
    "parameters": "parameters"
  },
  "hf_model": {
    "type": "simulation_model",
    "interface": "hf_interface",
    "parameters": "parameters"
  },
  "proposal_distribution": {
    "distribution": "normal",
    "mean": [
      0.0,
      0.0
    ],
    "covariance": [
      [
        0.01,
        0.00
      ],
      [
        0.00,
        0.01
      ]
    ]
  },
  "lf_interface": {
    "type": "direct_python_interface",
    "num_workers": 1,
    "main_file": "park91a_lofi_coords.py"
  },
  "hf_interface": {
    "type": "direct_python_interface",
    "num_workers": 1,
    "main_file": "park91a_hifi_coords.py"
  },
  "parameters": {
    "random_variables": {
      "x1": {
        "size": 1,
        "distribution": "uniform",
        "lower_bound": 0.01,
        "upper_bound": 0.99
      },
      "x2": {
        "size": 1,
        "distribution": "uniform",
        "lower_bound": 0.01,
        "upper_bound": 0.99
      }
    }
  }
}
